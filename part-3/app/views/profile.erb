<h1>Welcome <%= @user.user_name %> </h1>

<div class = "new_item">
  <h3>Sell New item</h3>

  <!-- Create new item form -->
  <%= erb :_create_item_form %>

</div>

<!-- Items you have won -->
<h4> Items you have won!</h4>
 <% @bid_items.each do |bid| %>
    <li> <%= bid.item.find_max(session[:user_id]) %> </li>
 <% end %>

<!-- Items you have bid on -->
<h4>Items you bid on</h4>

  <% @bid_items.each do |bid| %>
    <li><a href="/item/<%= bid.item.id %>"> <%= bid.item.name %> </a>-- For: $<%= bid.amount %></li>
  <% end %>

<h4>Your Items for sale</h4>

<% @items.each do |item| %>
  <div class="all_items" style= "border: 2px solid black">
  <!-- item name -->
    <%= item.name %>

    <!-- Update Item -->
    <a href="/item/<%= item.id %>">Update</a>

    <!-- delete Item -->
    <form method="post" action="/item/<%= item.id %>">
      <input type= "hidden" name="_method" value="delete">
      <input type="submit" value="delete">
    </form>
  </div>

  <br><br>

<% end %>


