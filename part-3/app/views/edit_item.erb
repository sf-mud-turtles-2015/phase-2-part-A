<h1>Edit <%= @item.title %></h1>

<form method= 'post' action = '/items/<%= @item.id %>'>
  <input type="hidden" name="_method" value="put">

  <label for="item[title]">Title</label>
  <input type = 'text' name = 'item[title]' value = '<%= @item.title %>'><br>

  <label for="item[description]">Description</label>
  <input type = 'text' name = 'item[description]' value = '<%= @item.description %>'><br>

  <label for="item[open]">Start date/time <em>(format YYYY-MM-DD HH:MM:SS)</em></label>
  <input type = 'text' name = 'item[open]'  value = '<%= @item.open %>'><br>

  <label for="item[close]">End date/time <em>(format YYYY-MM-DD HH:MM:SS)</em></label>
  <input type = 'text' name = 'item[close]' value = '<%= @item.open %>'><br>

  <input type='submit' value="Submit">
</form>
