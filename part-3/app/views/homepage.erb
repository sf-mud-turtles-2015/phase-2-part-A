<h1>This is the homepage</h1>

<% if session[:user_id] != nil %>
  <a href="/logout">Logout</a>
  <a href="/profile/<%= session[:user_id] %>">View profile</a>

<% else %>
  <a href="/login">Login</a>
  <a href="/signup">Signup</a>
<% end %>

<hr>

<h1>Here are all the items to bid on</h1>

<% @item.each do |item| %>

<!-- if Time.now is between start_date and end_date -->
<!-- .to_i turns a time into an int and I can compare!!! -->
  <% if (@time > item.start_date.to_i) && (@time < item.end_date.to_i) %>
    <a href="/item/<%= item.id %>"> <%= item.name %> -by: NAME NEEDED </a><br><br>
  <% end %>

 <% end %>
