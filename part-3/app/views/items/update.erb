<h3>Update an Item</h3>

<%if session[:user_id] == @item.user_id%>
<form method="post" action="/items/<%= @item.id %>/update">
  <input name="item[name]" type="text" value="<%= @item.name %>">
  <input name="item[description]" type="text" value="<%= @item.description %>">
  <input name="item[start_time]" type="text" value="<%= @item.start_time %>">
  <input name="item[end_time]" type="text" value="<%= @item.end_time %>">
  <input type="submit" value="Create">
</form>
<% end %>